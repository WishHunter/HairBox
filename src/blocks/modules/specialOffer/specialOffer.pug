mixin specialOffer()
  section.specialOffer
    .container
      h2.specialOffer__title Специальное предложение
      ul.specialOffer__tabs
        li.specialOffer__tab
          a.specialOffer__tab-link(href="catalog.html") Все товары
        li.specialOffer__tab
          a.specialOffer__tab-link(href="catalog.html") Волосы
        li.specialOffer__tab
          a.specialOffer__tab-link(href="catalog.html") Тело
        li.specialOffer__tab
          a.specialOffer__tab-link(href="catalog.html") Лицо
        li.specialOffer__tab
          a.specialOffer__tab-link(href="catalog.html") Аксессуары
      .specialOffer__products
        -var i = 1;
        while i < 9
          .specialOffer__prod.prod
            a.prod__link(href="product.html")
              p.prod__sticker.prod__sticker--sale sale
              .prod__photo-block
                +img('product1.png', 'prod__photo')
              p.prod__title Lorem, ipsum dolor.
              p.prod__desc Lorem ipsum dolor sit amet.
              .prod__price
                p.prod__old-price 1341.00 руб.
                p.prod__new-price 1340.00 руб.
            a.prod__btn(href="placing-order.html") В корзину
            a.prod__favorites(href="#")
              +svg('heart', '15px', '14px', 'prod__icon')
          -i++
